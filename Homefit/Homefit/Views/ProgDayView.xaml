             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Homefit.Views.ProgDayView"
             >

    <StackLayout>
        <Label HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" Text="{Binding DayNb}" />

        <Label HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand" Text="PETIT-DÉJEUNER" />
        <Label HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand" Text="ENCAS" />
        <Label HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand" Text="DÉJEUNER" />
